VERSTR="2.7.6"
DPREFIX="${HOME}/python"
sudo yum install -y gcc
mkdir -p ${DPREFIX}/src
cd ${DPREFIX}/src
wget http://www.python.org/ftp/python/${VERSTR}/Python-${VERSTR}.tgz
cd Python-${VERSTR}
./configure --prefix ${DPREFIX}
make install

# PIP
PIPVER="1.4.1"
cd ${DPREFIX}/src
wget https://pypi.python.org/packages/source/p/pip/pip-${PIPVER}.tar.gz --no-check-certificate
tar -xzvf pip-${PIPVER}.tar.gz
cd pip-${PIPVER}
${DPREFIX}/bin/python setup.py install
